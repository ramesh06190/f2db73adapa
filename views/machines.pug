extends layout

block content
  h1= title
  - var machines =results;
  div(class="container-fluid")
    div(class="row")
      each item in machines
        div(class="col-sm-2" width="215px") Machine Type:#{item.MachineType}, Capacity:#{item.Capacity}, useType:#{item.useType}, Energy:#{item.Energy}
  br
  div(class="container-fluid")
    div(class="row")
    - for(var i=0;i<machines.length;i++) {
        div(class="col-sm-2" width="215px" onClick=`buy(${i+1})`) #{machines[i].MachineType}
    -}
  script. 
    function buy(indexNum) {
      alert(`You purchased item ${indexNum}`);
    }